<section>
    <h1>{{title}}</h1>

    {{#if errors}}
    <div class="error-box align-center">
        {{#each errors}}
        <p>{{this}}</p>
        {{/each }}
    </div>
    {{/if}}

    <div class="item padded align-center">
        <form class="layout left large" action="/auth/register" method="post">

            <div class="col aligned">
                <label for="username">
                    <span>Username</span>
                    <input class="padded" type="text" name="username" id="username" />
                </label>
                <label for="password">
                    <span>Password</span>
                    <input class="padded" type="password" name="password" id="password" />
                </label>
                <label for="repass">
                    <span>Confirm Password</span>
                    <input class="padded" type="password" name="repass" id="repass" />
                </label>
            </div>

            <div class="content pad-med align-center vertical pt-20 ">
                <div class="align-center pt-20">
                    <input class="action btn-big" type="submit" value="Register"/>
                </div>
            </div>
        </form>
        <footer>
            Already have an account? <a href="/auth/login">Login here</a>
        </footer>
    </div>
</section>