<div class="container">
    <div class="blog-message">
        <h1 id="site-title">Blog</h1>
        <h2 id="site-mid-title">Create your own world!</h2>
    </div>

    {{#if blogs}}
    <div class="last-blogs">
        {{#each blogs}}
        {{> blogInfoCard}}
        {{/each}}
    </div>
    {{else}}
    <article class="not-available-blogs">
        <h1>No blogs created yet.</h1>
    </article>
    {{/if}}

    
</div>