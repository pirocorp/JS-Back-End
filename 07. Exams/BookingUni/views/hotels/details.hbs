<section id="viewhotelDetails">
    <h2>Details</h2>
    {{#with hotel}}
    <div class="hotel-ticket">
        <div class="hotel-left">
            <img src="{{imageUrl}}" alt="">
        </div>
        <div class="hotel-right">
            <div>
                <h3>{{name}}</h3>
            </div>
            <div>
                {{city}}
            </div>
            <p><span>Free rooms: {{rooms}}</span> </p>            
            
            {{#if isOwner}}
                <a href="/hotels/{{_id}}/edit" class="edit">Edit</a>
                <a href="/hotels/{{_id}}/delete" class="remove">Delete</a>
            {{else}}
                {{#if isBooked}}
                <p><span class="green">You already have booked a room</span> </p>
                {{else}}
                <a href="/hotels/{{_id}}/book" class="book">Book</a>
                {{/if}}                
            {{/if}}            

        </div>
        {{/with}}
    </div>
</section>