<h1>Confirm Delete Product</h1>

{{#if product}}
    {{#with product}}
        <h2>Name: {{name}}</h2>
        <p>Price: ${{price}}</p>    

        <form action="/delete/{{id}}" method="post">
            <input type="submit" value="Delete Product (forever)">
        </form>
        
        <a href="/catalog/{{id}}">Cancel</a>
    {{/with}}
{{else}}
    <p><i>Product with id: {{productId}} not found.</i> Return to <a href="/catalog">Catalog</a></p>
{{/if}}